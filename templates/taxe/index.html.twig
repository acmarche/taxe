{% extends '@Taxe/layout.html.twig' %}

{% block body %}
    <h3>Liste des taxes</h3>

    <a href="{{ path('taxe_tri') }}"><i class="fas fa-sort"></i>Trier</a>

    {{ include('@Taxe/taxe/_search.html.twig') }}

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Nomenclature</th>
            <th>Exercices</th>
        </tr>
        </thead>
        <tbody>
        {% for taxe in taxes %}
            <tr>
                <td>
                    <a href="{{ path('taxe_show', {'id': taxe.id}) }}">
                        {{ taxe.nom }}
                    </a>
                </td>
                <td>{{ taxe.nomenclature }}</td>
                <td>
                    {% for exercice in taxe.exercices %}
                        {{ exercice.annee }}
                    {% endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% extends '@Taxe/layout.html.twig' %}

{% block body -%}

    <h3>Liste des users</h3>

    <a href="{{ path('taxe_user_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un utilisateur
    </a> <br/><br/>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Role(s)</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <a href="{{ path('taxe_user_show', { 'id': user.id }) }}">
                        {{ user.nom }} {{ user.prenom }}
                    </a>
                </td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles | join(',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% extends '@Taxe/layout.html.twig' %}

{% block body -%}

    <div class="card">
        <div class="card-header">
            <h3>{{ user }}</h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">

                <div class="col-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.username) }}
                </div>
            </div>
            {{ form_row(form.roles) }}
            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="ti ti-device-floppy" aria-hidden="true"></i>
                Sauvegarder
            </button>
            {{ form_end(form) }}
        </div>
        <div class="card-footer">
            <br/>
            <a href="{{ path('taxe_user_show',{'id':user.id}) }}">
                <span class="ti ti-list"></span> Annuler
            </a>
        </div>
    </div>

{% endblock %}



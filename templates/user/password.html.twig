{% extends '@Taxe/layout.html.twig' %}

{% block title %}{{ user }}{% endblock %}

{% block body -%}

    <div class="card">
        <div class="card-header">
            <h3>Changer le mot de passe</h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.plainPassword) }}
            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="ti ti-device-floppy" aria-hidden="true"></i>
                Sauvegarder
            </button>
            {{ form_end(form) }}

        </div>
        <div class="card-footer">
            <a href="{{ path('taxe_user') }}">
                <span class="ti ti-list"></span> Annuler
            </a>
        </div>
    </div>
{% endblock %}
